@model Rental.Models.User


<main class="property-container">
    @using (Html.BeginForm("Login", "Authorization", FormMethod.Post))
    {
        <div class="container">
            <h1 class="loginregH1">Авторизация</h1>
            <div class="form-group">
                <label>Логин</label>
                @Html.TextBoxFor(model => model.UserName, new { required = "required" })
            </div>
            <div class="form-group">
                <label>Пароль</label>
                @Html.TextBoxFor(model => model.UserPassword, new { required = "required" })
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <button type="submit" class="log-btn">Войти</button>
            <button type="button" class="reg-btn" onclick="location.href='@Url.Action("Registration", "Authorization")'">Регистрация</button>
        </div>

    }
</main>