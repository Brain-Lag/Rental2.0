@model Rental.Models.User

<main class="property-container">
    @using (Html.BeginForm("Registration", "Authorization", FormMethod.Post))
    {
        <div class="container">
            <h1 class="loginregH1">Регистрация</h1>
            <div class="form-group">
                <label>Логин</label>
                @Html.TextBoxFor(model => model.UserName, new { required = "required" })
            </div>
            <div class="form-group">
                <label>E-mail</label>
                @Html.TextBoxFor(model => model.UserEmail, new { required = "required" })
            </div>
            <div class="form-group">
                <label>Пароль</label>
                @Html.TextBoxFor(model => model.UserPassword, new { required = "required" })
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <button type="submit" class="reg-btn">Регистрация</button>
        </div>
    }
</main>